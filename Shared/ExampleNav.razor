@inject ExampleService exempleService

<style>
    .nav-link {
        color: #ffffff; 
    }

        
    .nav-link:hover {
            background-color: #495057; 
        }

        
    .nav-link.active {
            background-color: #007bff; 
            color: #ffffff; 
        }
</style>

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">OMS</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="NavMenuCssClass" @onclick="ToggleNavMenu">

    <ul class="nav flex-column">
        @foreach (var example in exempleService.allExamples)
        {
            <li class="nav-item">
                <NavLink class="nav-link" href="@example.Path" Match="NavLinkMatch.All">
                    <span>@example.Name</span>
                </NavLink>
            </li>
        }
    </ul>
</div>


@code {
    public bool collapseNavMenu = true;
    public string NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    public void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
