@layout NotFoundLayout
@page "/NotFound"


<style>
    .my-card {
        margin: 20px;
    }

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .card-text {
        color: #555;
    }

    .text-right {
        text-align: right;
    }
</style>




<RadzenCard class="card"  Style="margin: 0rem; margin-top: 5em;">
        <RadzenColumn SizeSM="4" class="text-center">
        <RadzenText TextStyle="TextStyle.DisplayH2" class="rz-color-danger-dark rz-mt-4 rz-mb-0"><b>Error 404 NOT FOUND</b></RadzenText>
            <RadzenText TextStyle="TextStyle.Body2" class="rz-color-black rz-mt-4 rz-mb-0"><b>Sorry, there's nothing at this address.</b></RadzenText>
        <RadzenText TextStyle="TextStyle.Body2" class="rz-color-black rz-mt-4 rz-mb-0"><b>Return To The @text Page</b></RadzenText>
            <RadzenButton Text="@text" class="rz-color-white rz-mt-8 rz-mb-0" Click="LearnMoreClicked" ButtonStyle="ButtonStyle.Primary" />
        </RadzenColumn>
</RadzenCard>

@code {
    bool keyExists;
    string text;
    User user = new User();
    void LearnMoreClicked()
    {
        navigationManager.NavigateTo("/login");
    }
    protected override async Task OnInitializedAsync()
    {
        user = await localStorage.GetItemAsync<User>("UserInfo");
        keyExists = await localStorage.ContainKeyAsync("UserInfo");
        if (keyExists == true && user.Suspended == 1)
        {
            navigationManager.NavigateTo("/home");
        }
        else
        {
            text = "Login";
        }
        
    }

}
